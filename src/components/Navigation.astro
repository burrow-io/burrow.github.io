---
const currentPath = Astro.url.pathname;
---

<nav>
  <div class="container">
    <div class="nav-container">
      <div class="logo">
        <a href="/" class="logo-link">
          <img src={`${import.meta.env.BASE_URL}burrow-logo-only.svg`} alt="Burrow Logo" class="logo-img" />
          <span class="logo-text">Burrow</span>
        </a>
      </div>
      <ul class="nav-links">
        <li><a href="/case-study" class={currentPath === '/case-study' ? 'active' : ''}>Case Study</a></li>
        <li><a href="/docs" class={currentPath === '/docs' ? 'active' : ''}>Docs</a></li>
        <li><a href="/team" class={currentPath === '/team' ? 'active' : ''}>Team</a></li>
        <li><a href="https://github.com/your-username/burrow" target="_blank" rel="noopener noreferrer">GitHub</a></li>
      </ul>
    </div>
  </div>
</nav>

<style>
.logo-link {
  text-decoration: none;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  transition: transform 0.2s;
}

.logo-link:hover {
  transform: scale(1.02);
}

.logo-img {
  height: 36px;
  width: auto;
}

.logo-text {
  font-size: 1.75rem;
  font-weight: 450;
  color: #4e342e;
  letter-spacing: -0.06em;
  font-family: 'Poppins', sans-serif;
  display: inline-block;
}

.nav-links .active {
  color: var(--brand-primary);
  font-weight: 600;
}
</style>