  background: #ffffff;
  border-right: 1px solid #e9ecef;
  overflow-y: auto;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-shadow: 2px 0 8px rgba(0, 0, 0, 0.04);
}

