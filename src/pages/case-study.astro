// Process the markdown content dynamically
import markdownContentRaw from '../data/case-study-content.md?raw';

const markdownContent = markdownContentRaw;

// Parse the markdown content into sections with subsections
const rawSections = markdownContent.split(/^# /gm);
console.log('Total raw sections found:', rawSections.length);

const sections = rawSections
  .slice(1) // Remove the first empty element
  .filter(section => section.trim()) // Remove any empty sections
  .map((section, index) => {
    const lines = section.split('\n');
    const title = lines[0].trim();
    console.log(`Processing section ${index + 1}: "${title}"`);
    let content = lines.slice(1).join('\n').trim();

    // Create section ID from title
    const id = title.toLowerCase()
      .replace(/\s+/g, '-')
      .replace(/[^a-z0-9-]/g, '')
      .replace(/^-+|-+$/g, ''); // Remove leading/trailing dashes

    // Extract subsections based on ## headers
    const subsections = [];
    try {
      const subsectionPattern = /^## (.+)$/gm;
      let match;
      const subsectionMatches = [];

      while ((match = subsectionPattern.exec(content)) !== null) {
        subsectionMatches.push({
          title: match[1],
          index: match.index,
          fullMatch: match[0]
        });
      }

      // Create subsection objects with IDs
      subsectionMatches.forEach((match, subIndex) => {
        const subsectionTitle = match.title;
        const subsectionId = `${id}-${subsectionTitle.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '')}`;
        subsections.push({
          title: subsectionTitle,
          id: subsectionId,
          number: `${index + 1}.${subIndex + 1}`
        });
      });
    } catch (error) {
      console.error(`Error processing subsections for section "${title}":`, error);
    }

    // Convert markdown content to HTML for proper rendering, adding IDs to subsection headers
    try {
      content = content
        // Convert subsection headers with IDs
        .replace(/^## (.+)$/gm, (match, headerTitle) => {
          const subsectionId = `${id}-${headerTitle.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '')}`;
          return `<h3 id="${subsectionId}">${headerTitle}</h3>`;
        })
        // Convert sub-subsection headers
        .replace(/^### (.+)$/gm, '<h4>$1</h4>')
        // Convert bold text
        .replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>')
        // Convert bullet points and lists
        .replace(/^- (.+)$/gm, '<li>$1</li>')
        // Convert paragraphs - split by double newlines first
        .split('\n\n')
        .map(block => {
          block = block.trim();
          if (!block) return '';

          // If block contains list items, wrap in <ul>
          if (block.includes('<li>')) {
            return '<ul>' + block.replace(/\n/g, '') + '</ul>';
          }

          // If block contains headers, keep as is
          if (block.includes('<h3>') || block.includes('<h4>')) {
            return block;
          }

          // Otherwise treat as paragraph
          return '<p>' + block.replace(/\n/g, ' ') + '</p>';
        })
        .join('\n');
    } catch (error) {
      console.error(`Error processing content for section "${title}":`, error);
      content = `<p>Error processing content for section: ${title}</p>`;
    }

    return {
      id,
      title,
      content,
      subsections,
      number: index + 1
    };
  });

console.log('Final sections array:');
console.log('Total sections:', sections.length);
sections.forEach((section, index) => {
  console.log(`${index + 1}. ${section.title} (${section.subsections.length} subsections)`);
});

