  background: rgba(0, 105, 148, 0.35);
}

.case-study-nav {
  flex: 1 1 auto;
  overflow: visible;
  padding: 1.5rem 0 3rem 0;
  min-height: 0;
  width: 100%;
  position: relative;
}

/* Sidebar Navigation Sections */
.sidebar-nav-section {
  margin-bottom: 0.5rem;
  padding: 0 0.75rem;
}

.sidebar-nav-header {
  width: 100%;
  background: none;
  border: none;
  padding: 0.875rem 1rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  color: #4E342E;
  font-size: 1.05rem;
  font-weight: 600;
  transition: all 0.2s ease;
  border-radius: 8px;
  margin-bottom: 0.25rem;
}

.sidebar-nav-header:hover {
