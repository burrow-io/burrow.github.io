<script>
// Set default state and add event listeners on page load
document.addEventListener('DOMContentLoaded', function() {
  // Add click event listeners to all sidebar section headers
  const sectionHeaders = document.querySelectorAll('.sidebar-nav-header');

  sectionHeaders.forEach(header => {
    header.addEventListener('click', function() {
      const sectionId = this.getAttribute('data-section');
      toggleSidebarSection(sectionId, this);
    });
  });

  // APIs section starts expanded
  const apisHeader = document.querySelector('[data-section="apis"]');
  const apisSections = document.getElementById('apis-sections');
  const apisArrow = apisHeader?.querySelector('.sidebar-arrow');

  if (apisHeader && apisSections && apisArrow) {
    apisHeader.classList.add('active');
    apisSections.classList.add('expanded');
    apisArrow.textContent = '▼';
  }
});

function toggleSidebarSection(sectionId, clickedHeader) {
  // Get the clicked section elements
  const clickedSubsections = document.getElementById(sectionId + '-sections');
  const clickedArrow = clickedHeader.querySelector('.sidebar-arrow');

  // Check if the clicked section is currently expanded
  const isCurrentlyExpanded = clickedSubsections.classList.contains('expanded');

  // Close all sidebar sections first
  const allHeaders = document.querySelectorAll('.sidebar-nav-header');
  const allSubsections = document.querySelectorAll('.sidebar-nav-subsections');
  const allArrows = document.querySelectorAll('.sidebar-arrow');

  allHeaders.forEach(header => {
    header.classList.remove('active');
  });

  allSubsections.forEach(subsection => {
    subsection.classList.remove('expanded');
  });

  allArrows.forEach(arrow => {
    arrow.textContent = '▶';
  });

  // If the clicked section was NOT expanded, expand it
  if (!isCurrentlyExpanded) {
    clickedHeader.classList.add('active');
    clickedSubsections.classList.add('expanded');
    clickedArrow.textContent = '▼';
  }
  // If it was expanded, it stays collapsed (since we closed all sections above)
}
</script>

