---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import pipelineApi from '../data/pipeline-api.json';
import ragApi from '../data/rag-api.json';

// Process the Pipeline API spec safely
const pipelineApiInfo = pipelineApi.info;
const pipelineEndpoints = Object.entries(pipelineApi.paths)
  .filter(([path]) => path !== '/' && path !== '/health') // Filter out root and health check endpoints
  .map(([path, methods]) => {
  const httpMethods = Object.entries(methods).map(([method, details]) => ({
    method: method.toUpperCase(),
    methodClass: method,
    ...details
  }));
  return { path, methods: httpMethods };
});

// Extract Pipeline API schemas for reference
const pipelineSchemas = pipelineApi.components?.schemas || {};
const pipelineSecuritySchemes = pipelineApi.components?.securitySchemes || {};

// Process the RAG API spec safely
const ragApiInfo = ragApi.info;
const ragEndpoints = Object.entries(ragApi.paths)
  .filter(([path]) => path !== '/' && path !== '/health') // Filter out root and health check endpoints
  .map(([path, methods]) => {
  const httpMethods = Object.entries(methods).map(([method, details]) => ({
    method: method.toUpperCase(),
    methodClass: method,
    ...details
  }));
  return { path, methods: httpMethods };
});

// Extract RAG API schemas for reference
const ragSchemas = ragApi.components?.schemas || {};
const ragSecuritySchemes = ragApi.components?.securitySchemes || {};
---

<Layout title="Burrow - API Documentation" description="API documentation for Burrow Pipeline and RAG APIs">
  <Navigation />
  <main class="docs-main">
    <div class="docs-container">
      <!-- Sidebar Navigation -->
      <aside class="sidebar">
        <nav class="docs-nav">
          <!-- Quick Start Section -->
          <div class="sidebar-nav-section">
            <a href="#quick-start" class="sidebar-nav-header">
              <span>Quick Start</span>
              <span class="sidebar-arrow">▶</span>
            </a>
          </div>
          
          <!-- APIs Section -->
          <div class="sidebar-nav-section">
            <button class="sidebar-nav-header" data-section="apis">
              <span>APIs</span>
              <span class="sidebar-arrow">▶</span>
            </button>
            <ul class="sidebar-nav-subsections" id="apis-sections">
              <li>
                <a href="#apis-overview" class="sidebar-main-section">Overview</a>
              </li>
              <li>
                <a href="#pipeline-api" class="sidebar-main-section">Burrow Pipeline API</a>
              </li>
              {pipelineEndpoints.flatMap(endpoint => {
                const baseEndpointId = `pipeline-${endpoint.path.replace(/\//g, '-').replace(/^\-+|\-+$/g, '').replace(/[^a-z0-9-]/gi, '-')}`;
                return endpoint.methods.map((method, index) => {
                  const endpointId = `${baseEndpointId}-${method.methodClass}`;
                  // Map summaries to custom descriptions
                  const summary = method?.summary || '';
                  let description = summary;
                  if (summary.toLowerCase() === 'user authentication') {
                    description = 'User Authentication';
                  } else if (summary.toLowerCase().includes('retrieve a list')) {
                    description = 'Retrieve Document';
                  } else if (summary.toLowerCase().includes('upload a new')) {
                    description = 'Upload Document';
                  } else if (summary.toLowerCase().includes('get a specific')) {
                    description = 'Retrieve Document ID';
                  } else if (summary.toLowerCase().includes('delete a document')) {
                    description = 'Delete Document';
                  } else {
                    // Fallback: extract 1-2 words
                    const words = summary.split(' ');
                    if (words.length > 2) {
                      description = words.slice(0, 2).join(' ');
                    }
                  }
                  const methodName = method?.method || 'GET';
                  const methodClass = method?.methodClass || 'get';
                  return (
                    <li>
                      <a href={`#${endpointId}`} class="sidebar-subsection">
                        <span class="endpoint-description-text">{description}</span>
                        <span class={`method-badge method-${methodClass}`}>{methodName}</span>
                      </a>
                    </li>
                  );
                });
              })}
              <li>
                <a href="#rag-api" class="sidebar-main-section">Burrow Query API</a>
              </li>
              {ragEndpoints.flatMap(endpoint => {
                const baseEndpointId = `rag-${endpoint.path.replace(/\//g, '-').replace(/^\-+|\-+$/g, '').replace(/[^a-z0-9-]/gi, '-')}`;
                return endpoint.methods.map((method, index) => {
                  const endpointId = `${baseEndpointId}-${method.methodClass}`;
                  // Extract 1-2 word description from summary
                  let description = method?.summary || endpoint.path.split('/').pop() || 'Endpoint';
                  const words = description.split(' ');
                  if (words.length > 2) {
                    description = words.slice(0, 2).join(' ');
                  }
                  const methodName = method?.method || 'GET';
                  const methodClass = method?.methodClass || 'get';
                  return (
                    <li>
                      <a href={`#${endpointId}`} class="sidebar-subsection">
                        <span class="endpoint-description-text">{description}</span>
                        <span class={`method-badge method-${methodClass}`}>{methodName}</span>
                      </a>
                    </li>
                  );
                });
              })}
            </ul>
          </div>
        </nav>
      </aside>

      <!-- Main Content -->
      <article class="docs-content">
        <header class="docs-header">
          <h1>Documentation</h1>
        </header>

        <section id="quick-start" class="docs-section">
          
          <h3>Quick Start</h3>
          <p>
            Deploy Burrow to AWS using our interactive CLI that automates Terraform and simplifies setup.          </p>

          <h3>Prerequisites</h3>
          <p>To get started with Burrow, ensure the following are set up:</p>
          <ul>
            <li>An active AWS account</li>
            <li>
              <strong>AWS CLI installed and configured</strong> Run <code>aws configure</code> and provide:
              <ul>
                <li>AWS Access Key ID</li>
                <li>AWS Secret Access Key</li>
                <li>Default region name</li>
              </ul>
            </li>
            <li>
              <strong>An existing VPC with subnets:</strong>
              <ul>
                <li>2 public subnets</li>
                <li>2 private subnets</li>
              </ul>
            </li>
            <li>Node.js and npm installed on your system</li>
          </ul>

          <h3>Installation</h3>
          <p>Clone the burrow-cli repository:</p>
          <pre><code>git clone https://github.com/burrow-io/burrow-cli.git</code></pre>
          <p>Navigate to the cloned directory:</p>
          <pre><code>cd burrow-cli</code></pre>
          <p>Install the required dependencies:</p>
          <pre><code>npm install</code></pre>

          <h3>Deploying Burrow</h3>
          <p>To deploy Burrow infrastructure using the CLI, execute the following command:</p>
          <pre><code>npm run deploy</code></pre>
          <p>This command will guide you through the deployment process with interactive prompts:</p>

          <h4>Configuration Prompts</h4>
          <p>You will be asked to provide the following information, one prompt at a time:</p>
          <ul>
            <li><strong>AWS Region</strong> - The region where you want to deploy Burrow (e.g., us-east-1)</li>
            <li><strong>VPC ID</strong> - Your existing VPC identifier (e.g., vpc-0abcd1234efgh5678)</li>
            <li><strong>First Public Subnet ID</strong> - Your existing first public subnet</li>
            <li><strong>Second Public Subnet ID</strong> - Your existing second public subnet</li>
            <li><strong>First Private Subnet ID</strong> - Your existing first private subnet</li>
            <li><strong>Second Private Subnet ID</strong> - Your existing second private subnet</li>
          </ul>

          <h4>Deployment Outputs</h4>
          <p>Once deployment completes, you'll receive the following information:</p>
          <ul>
            <li><strong>CloudFront DNS Name:</strong> The URL to access your Burrow frontend (e.g., https://d1234abcd5678.cloudfront.net)</li>
            <li><strong>RAG API Key:</strong> Authentication key for making requests to the RAG API</li>
            <li><strong>Admin Password:</strong> Credentials for logging into the frontend dashboard</li>
          </ul>
          <p>Save these outputs—you'll need them to access and use Burrow.</p>

          <h3>Accessing the User Interface</h3>
          <p>Once deployment is complete, navigate to the CloudFront DNS URL provided in the deployment outputs.</p>

          <h4>Logging In</h4>
          <p>Use the admin credentials from the deployment output to log into the dashboard:</p>
          <ul>
            <li><strong>Username:</strong> admin</li>
            <li><strong>Password:</strong> [provided during deployment]</li>
          </ul>

          <h4>Using the Dashboard</h4>
          <p>From the UI, you can:</p>
          <ul>
            <li>Upload documents for processing through a simple drag-and-drop interface</li>
            <li>View document metadata including name, size, upload date, and processing status</li>
            <li>Track processing progress as documents move through different stages</li>
            <li>Monitor status updates delivered via server-sent events from the Management API</li>
          </ul>
          <p>The event-driven architecture means you simply upload documents and Burrow handles everything else behind the scenes—no manual intervention required.</p>

          <h3>Querying Documents</h3>
          <p>Once documents are processed, you can query them using the RAG API.</p>

          <h4>Making API Requests</h4>
          <p>Use the Query API key provided during deployment to authenticate your requests. All requests go through your CloudFront distribution:</p>
          <pre><code>{`curl -X POST https://your-cloudfront-dns/query-service \\
  -H 'x-api-token: YOUR_API_KEY' \\
  -H 'Content-Type: application/json' \\
  -d '{
    "query": "What are the main topics discussed?",
    "top_k": 5
  }'`}</code></pre>

          <h4>Advanced RAG Features</h4>
          <p>The Query API supports multiple retrieval techniques:</p>
          <ul>
            <li><strong>Keyword Search:</strong> Traditional term-based matching</li>
            <li><strong>Semantic Search:</strong> Vector similarity using embeddings</li>
            <li><strong>Hybrid Search:</strong> Combines keyword and semantic approaches</li>
            <li><strong>Reranking:</strong> Re-orders results for improved relevance</li>
            <li><strong>Metadata Filtering:</strong> Filter by document properties (date, type, etc.)</li>
          </ul>
          <p>These features enable you to retrieve the most relevant document chunks for feeding into your LLM-powered RAG applications.</p>

          <h3>Destroying Burrow Infrastructure</h3>
          <p>To tear down the Burrow infrastructure, run the following command:</p>
          <pre><code>npm run destroy</code></pre>
          <p>This command will perform the following steps:</p>

          <h4>Resource Destruction</h4>
          <p>Deletes all Burrow-related resources in your AWS account, including:</p>
          <ul>
            <li>CloudFront distribution</li>
            <li>S3 buckets (frontend assets and document storage)</li>
            <li>Application Load Balancer</li>
            <li>ECS clusters and services</li>
            <li>DynamoDB tables</li>
            <li>RDS Aurora database</li>
            <li>EventBridge rules and targets</li>
            <li>Security groups and IAM roles</li>
          </ul>

          <h4>Preserved Resources</h4>
          <p>The following resources will not be deleted:</p>
          <ul>
            <li>Your VPC</li>
            <li>Public and private subnets you provided</li>
          </ul>
          <p>This allows you to safely destroy Burrow without affecting other infrastructure in your AWS account.</p>
          <p>Terraform will display progress as resources are destroyed.</p>

          <h4>Confirmation</h4>
          <p>Once complete, you will receive a confirmation message that all Burrow resources have been removed.</p>
          <p><strong>⚠️ Important:</strong> Destroying the infrastructure will permanently delete all associated resources and data, including uploaded documents and vector embeddings. This action is irreversible, so proceed with caution.</p>
        </section>

        <section id="apis-overview" class="docs-section">
          <h2>Overview</h2>
          <p>
            Burrow provides two main APIs for document management and retrieval. The Pipeline API handles document ingestion and processing, while the Query API provides retrieval capabilities for your RAG application.
          </p>
        </section>

        <section id="pipeline-api" class="docs-section">
          <h2>{pipelineApiInfo.title}</h2>
          <p>
            The Pipeline API handles document ingestion, processing, and management operations. It provides endpoints for uploading documents, tracking their processing status, and managing the document lifecycle.
          </p>

          <div class="api-section">
            <h3>Authentication</h3>
            <p>Authentication is required using <code>{pipelineSecuritySchemes.BearerAuth?.name || 'x-api-token'}</code> header with your API token.</p>

            <h3>Base URL</h3>
            <pre><code>https://your-burrow-instance.com</code></pre>

            <h3>API Endpoints</h3>
            {pipelineEndpoints.map(endpoint => {
              const baseEndpointId = `pipeline-${endpoint.path.replace(/\//g, '-').replace(/^\-+|\-+$/g, '').replace(/[^a-z0-9-]/gi, '-')}`;
              return (
              <div class="endpoint-group" id={baseEndpointId}>
                <h4 class="endpoint-path">{endpoint.path}</h4>

                {endpoint.methods.map(method => {
                  const methodEndpointId = `${baseEndpointId}-${method.methodClass}`;
                  return (
                  <div class="endpoint" id={methodEndpointId}>
                    <div class="endpoint-header">
                      <span class={`method method-${method.methodClass}`}>{method.method}</span>
                      <span class="endpoint-summary">{method.summary}</span>
                    </div>

                    <p class="endpoint-description">{(method as any).description}</p>

                    {(method as any).parameters && (method as any).parameters.length > 0 && (
                      <div class="parameters-section">
                        <h5>Parameters</h5>
                        <ul class="parameters-list">
                          {(method as any).parameters.map((param: any) => (
                            <li>
                              <strong>{param.name}</strong>
                              <span class="param-type">({param.in}, {param.required ? 'required' : 'optional'})</span>
                              {param.schema?.type && <span class="param-schema">{param.schema.type}</span>}
                              {param.description && <span class="param-description">- {param.description}</span>}
                              {param.schema?.enum && (
                                <div class="param-enum">
                                  Options: {param.schema.enum.join(', ')}
                                </div>
                              )}
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {(method as any).requestBody && (
                      <div class="request-section">
                        <h5>Request Body</h5>
                        <p>{(method as any).requestBody.description}</p>
                        {Object.entries((method as any).requestBody.content).map(([contentType, content]: [string, any]) => (
                          <div class="content-type">
                            <strong>{contentType}</strong>
                            {content.schema?.properties && (
                              <ul>
                                {Object.entries(content.schema.properties).map(([propName, propDetails]: [string, any]) => (
                                  <li>
                                    <strong>{propName}</strong>: {propDetails.type}
                                    {propDetails.description && ` - ${propDetails.description}`}
                                  </li>
                                ))}
                              </ul>
                            )}
                          </div>
                        ))}
                      </div>
                    )}

                    <div class="responses-section">
                      <h5>Responses</h5>
                      {Object.entries(method.responses).map(([statusCode, response]: [string, any]) => (
                        <div class="response">
                          <h6 class={`status-code status-${statusCode.charAt(0)}`}>
                            {statusCode} - {response.description}
                          </h6>
                          {response.content?.['application/json']?.schema && (
                            <div class="response-schema">
                              <strong>Response Schema:</strong>
                              <pre><code>{JSON.stringify(response.content['application/json'].schema, null, 2)}</code></pre>
                            </div>
                          )}
                        </div>
                      ))}
                    </div>
                  </div>
                  );
                })}
              </div>
              );
            })}

            {Object.keys(pipelineSchemas).length > 0 && (
              <div class="schemas-section">
                <h3>Data Models</h3>
                {Object.entries(pipelineSchemas).map(([schemaName, schema]) => (
                  <div class="schema">
                    <h4>{schemaName}</h4>
                    <pre><code>{JSON.stringify(schema, null, 2)}</code></pre>
                  </div>
                ))}
              </div>
            )}
          </div>
        </section>

        <section id="rag-api" class="docs-section">
          <h2>{ragApiInfo.title}</h2>
          <p>
            {ragApiInfo.description} The RAG API provides endpoints for querying documents, retrieving relevant content, and performing vector similarity searches across your ingested data.
          </p>

          <div class="api-section">
            <h3>Authentication</h3>
            <p>Authentication is required using <code>{ragSecuritySchemes.APIKeyHeader?.name || 'x-api-token'}</code> header with your API token.</p>

            <h3>Base URL</h3>
            <pre><code>https://your-burrow-instance.com{ragApi.servers?.[0]?.url || ''}</code></pre>

            <h3>API Endpoints</h3>
            {ragEndpoints.map(endpoint => {
              const baseEndpointId = `rag-${endpoint.path.replace(/\//g, '-').replace(/^\-+|\-+$/g, '').replace(/[^a-z0-9-]/gi, '-')}`;
              return (
              <div class="endpoint-group" id={baseEndpointId}>
                <h4 class="endpoint-path">{endpoint.path}</h4>

                {endpoint.methods.map(method => {
                  const methodEndpointId = `${baseEndpointId}-${method.methodClass}`;
                  return (
                  <div class="endpoint" id={methodEndpointId}>
                    <div class="endpoint-header">
                      <span class={`method method-${method.methodClass}`}>{method.method}</span>
                      <span class="endpoint-summary">{method.summary}</span>
                    </div>

                    <p class="endpoint-description">{(method as any).description}</p>

                    {(method as any).parameters && (method as any).parameters.length > 0 && (
                      <div class="parameters-section">
                        <h5>Parameters</h5>
                        <ul class="parameters-list">
                          {(method as any).parameters.map((param: any) => (
                            <li>
                              <strong>{param.name}</strong>
                              <span class="param-type">({param.in}, {param.required ? 'required' : 'optional'})</span>
                              {param.schema?.type && <span class="param-schema">{param.schema.type}</span>}
                              {param.description && <span class="param-description">- {param.description}</span>}
                              {param.schema?.enum && (
                                <div class="param-enum">
                                  Options: {param.schema.enum.join(', ')}
                                </div>
                              )}
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {(method as any).requestBody && (
                      <div class="request-section">
                        <h5>Request Body</h5>
                        <p>{(method as any).requestBody.description}</p>
                        {Object.entries((method as any).requestBody.content).map(([contentType, content]: [string, any]) => (
                          <div class="content-type">
                            <strong>{contentType}</strong>
                            {content.schema?.$ref && (
                              <div class="schema-ref">
                                <strong>Schema:</strong> {content.schema.$ref.split('/').pop()}
                                {ragSchemas[content.schema.$ref.split('/').pop()] && (
                                  <pre><code>{JSON.stringify(ragSchemas[content.schema.$ref.split('/').pop()], null, 2)}</code></pre>
                                )}
                              </div>
                            )}
                            {content.schema?.properties && (
                              <ul>
                                {Object.entries(content.schema.properties).map(([propName, propDetails]: [string, any]) => (
                                  <li>
                                    <strong>{propName}</strong>: {propDetails.type}
                                    {propDetails.description && ` - ${propDetails.description}`}
                                  </li>
                                ))}
                              </ul>
                            )}
                          </div>
                        ))}
                      </div>
                    )}

                    <div class="responses-section">
                      <h5>Responses</h5>
                      {Object.entries(method.responses).map(([statusCode, response]: [string, any]) => (
                        <div class="response">
                          <h6 class={`status-code status-${statusCode.charAt(0)}`}>
                            {statusCode} - {response.description}
                          </h6>
                          {response.content?.['application/json']?.schema && (
                            <div class="response-schema">
                              <strong>Response Schema:</strong>
                              {response.content['application/json'].schema.$ref ? (
                                <div>
                                  <em>{response.content['application/json'].schema.$ref.split('/').pop()}</em>
                                  {ragSchemas[response.content['application/json'].schema.$ref.split('/').pop()] && (
                                    <pre><code>{JSON.stringify(ragSchemas[response.content['application/json'].schema.$ref.split('/').pop()], null, 2)}</code></pre>
                                  )}
                                </div>
                              ) : (
                                <pre><code>{JSON.stringify(response.content['application/json'].schema, null, 2)}</code></pre>
                              )}
                            </div>
                          )}
                        </div>
                      ))}
                    </div>
                  </div>
                  );
                })}
              </div>
              );
            })}

            {Object.keys(ragSchemas).length > 0 && (
              <div class="schemas-section">
                <h3>Data Models</h3>
                {Object.entries(ragSchemas).map(([schemaName, schema]) => (
                  <div class="schema">
                    <h4>{schemaName}</h4>
                    <pre><code>{JSON.stringify(schema, null, 2)}</code></pre>
                  </div>
                ))}
              </div>
            )}
          </div>
        </section>
      </article>
    </div>
  </main>
</Layout>

