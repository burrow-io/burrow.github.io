---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import pipelineApi from '../data/pipeline-api.json';
import ragApi from '../data/rag-api.json';

// Process the Pipeline API spec safely
const pipelineApiInfo = pipelineApi.info;
const pipelineEndpoints = Object.entries(pipelineApi.paths)
  .filter(([path]) => path !== '/' && path !== '/health') // Filter out root and health check endpoints
  .map(([path, methods]) => {
    const httpMethods = Object.entries(methods).map(([method, details]) => ({
      method: method.toUpperCase(),
      methodClass: method,
      ...details
    }));
    return { path, methods: httpMethods };
  });

// Extract Pipeline API schemas for reference
const pipelineSchemas = pipelineApi.components?.schemas || {};
const pipelineSecuritySchemes = pipelineApi.components?.securitySchemes || {};

// Process the RAG API spec safely
const ragApiInfo = ragApi.info;
const ragEndpoints = Object.entries(ragApi.paths)
  .filter(([path]) => path !== '/' && path !== '/health') // Filter out root and health check endpoints
  .map(([path, methods]) => {
    const httpMethods = Object.entries(methods).map(([method, details]) => ({
      method: method.toUpperCase(),
      methodClass: method,
      ...details
    }));
    return { path, methods: httpMethods };
  });

// Extract RAG API schemas for reference
const ragSchemas = ragApi.components?.schemas || {};
const ragSecuritySchemes = ragApi.components?.securitySchemes || {};
---

<Layout title="Burrow - API Documentation" description="API documentation for Burrow Pipeline and RAG APIs">
  <Navigation />
  <main class="docs-main">
    <div class="docs-container">
      <!-- Sidebar Navigation -->
      <aside class="sidebar">
        <nav class="docs-nav">
          <!-- APIs Section -->
          <div class="sidebar-nav-section">
            <button class="sidebar-nav-header" data-section="apis">
              <span>APIs</span>
              <span class="sidebar-arrow">▶</span>
            </button>
            <ul class="sidebar-nav-subsections" id="apis-sections">
              <li>
                <a href="#apis-overview" class="sidebar-main-section">Overview</a>
              </li>
              <li>
                <a href="#pipeline-api" class="sidebar-main-section">Burrow Pipeline API</a>
              </li>
              {pipelineEndpoints.flatMap(endpoint => {
                const baseEndpointId = `pipeline-${endpoint.path.replace(/\//g, '-').replace(/^\-+|\-+$/g, '').replace(/[^a-z0-9-]/gi, '-')}`;
                return endpoint.methods.map((method, index) => {
                  const endpointId = `${baseEndpointId}-${method.methodClass}`;
                  // Map summaries to custom descriptions
                  const summary = method?.summary || '';
                  let description = summary;
                  if (summary.toLowerCase() === 'user authentication') {
                    description = 'User Authentication';
                  } else if (summary.toLowerCase().includes('retrieve a list')) {
                    description = 'Retrieve Document';
                  } else if (summary.toLowerCase().includes('upload a new')) {
                    description = 'Upload Document';
                  } else if (summary.toLowerCase().includes('get a specific')) {
                    description = 'Retrieve Document ID';
                  } else if (summary.toLowerCase().includes('delete a document')) {
                    description = 'Delete Document';
                  } else {
                    // Fallback: extract 1-2 words
                    const words = summary.split(' ');
                    if (words.length > 2) {
                      description = words.slice(0, 2).join(' ');
                    }
                  }
                  const methodName = method?.method || 'GET';
                  const methodClass = method?.methodClass || 'get';
                  return (
                    <li>
                      <a href={`#${endpointId}`} class="sidebar-subsection">
                        <span class="endpoint-description-text">{description}</span>
                        <span class={`method-badge method-${methodClass}`}>{methodName}</span>
                      </a>
                    </li>
                  );
                });
              })}
              <li>
                <a href="#rag-api" class="sidebar-main-section">Burrow Query API</a>
              </li>
              {ragEndpoints.flatMap(endpoint => {
                const baseEndpointId = `rag-${endpoint.path.replace(/\//g, '-').replace(/^\-+|\-+$/g, '').replace(/[^a-z0-9-]/gi, '-')}`;
                return endpoint.methods.map((method, index) => {
                  const endpointId = `${baseEndpointId}-${method.methodClass}`;
                  // Extract 1-2 word description from summary
                  let description = method?.summary || endpoint.path.split('/').pop() || 'Endpoint';
                  const words = description.split(' ');
                  if (words.length > 2) {
                    description = words.slice(0, 2).join(' ');
                  }
                  const methodName = method?.method || 'GET';
                  const methodClass = method?.methodClass || 'get';
                  return (
                    <li>
                      <a href={`#${endpointId}`} class="sidebar-subsection">
                        <span class="endpoint-description-text">{description}</span>
                        <span class={`method-badge method-${methodClass}`}>{methodName}</span>
                      </a>
                    </li>
                  );
                });
              })}
            </ul>
          </div>
        </nav>
      </aside>

      <!-- Main Content -->
      <article class="docs-content">
        <header class="docs-header">
          <h1>Documentation</h1>
        </header>

        <section id="apis-overview" class="docs-section">
          <h2>Overview</h2>
          <p>
            Burrow provides two main APIs for document management and retrieval. The Pipeline API handles document ingestion and processing, while the Query API provides retrieval capabilities for your RAG application.
          </p>
        </section>

        <section id="pipeline-api" class="docs-section">
          <h2>{pipelineApiInfo.title}</h2>
          <p>
            The Pipeline API handles document ingestion, processing, and management operations. It provides endpoints for uploading documents, tracking their processing status, and managing the document lifecycle.
          </p>

          <div class="api-section">
            <h3>Authentication</h3>
            <p>Authentication is required using <code>{pipelineSecuritySchemes.BearerAuth?.name || 'x-api-token'}</code> header with your API token.</p>

            <h3>Base URL</h3>
            <pre><code>https://your-burrow-instance.com</code></pre>

            <h3>API Endpoints</h3>
            {pipelineEndpoints.map(endpoint => {
              const baseEndpointId = `pipeline-${endpoint.path.replace(/\//g, '-').replace(/^\-+|\-+$/g, '').replace(/[^a-z0-9-]/gi, '-')}`;
              return (
              <div class="endpoint-group" id={baseEndpointId}>
                <h4 class="endpoint-path">{endpoint.path}</h4>

                {endpoint.methods.map(method => {
                  const methodEndpointId = `${baseEndpointId}-${method.methodClass}`;
                  return (
                  <div class="endpoint" id={methodEndpointId}>
                    <div class="endpoint-header">
                      <span class={`method method-${method.methodClass}`}>{method.method}</span>
                      <span class="endpoint-summary">{method.summary}</span>
                    </div>

                    <p class="endpoint-description">{(method as any).description}</p>

                    {(method as any).parameters && (method as any).parameters.length > 0 && (
                      <div class="parameters-section">
                        <h5>Parameters</h5>
                        <ul class="parameters-list">
                          {(method as any).parameters.map((param: any) => (
                            <li>
                              <strong>{param.name}</strong>
                              <span class="param-type">({param.in}, {param.required ? 'required' : 'optional'})</span>
                              {param.schema?.type && <span class="param-schema">{param.schema.type}</span>}
                              {param.description && <span class="param-description">- {param.description}</span>}
                              {param.schema?.enum && (
                                <div class="param-enum">
                                  Options: {param.schema.enum.join(', ')}
                                </div>
                              )}
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {(method as any).requestBody && (
                      <div class="request-section">
                        <h5>Request Body</h5>
                        <p>{(method as any).requestBody.description}</p>
                        {Object.entries((method as any).requestBody.content).map(([contentType, content]: [string, any]) => (
                          <div class="content-type">
                            <strong>{contentType}</strong>
                            {content.schema?.properties && (
                              <ul>
                                {Object.entries(content.schema.properties).map(([propName, propDetails]: [string, any]) => (
                                  <li>
                                    <strong>{propName}</strong>: {propDetails.type}
                                    {propDetails.description && ` - ${propDetails.description}`}
                                  </li>
                                ))}
                              </ul>
                            )}
                          </div>
                        ))}
                      </div>
                    )}

                    <div class="responses-section">
                      <h5>Responses</h5>
                      {Object.entries(method.responses).map(([statusCode, response]: [string, any]) => (
                        <div class="response">
                          <h6 class={`status-code status-${statusCode.charAt(0)}`}>
                            {statusCode} - {response.description}
                          </h6>
                          {response.content?.['application/json']?.schema && (
                            <div class="response-schema">
                              <strong>Response Schema:</strong>
                              <pre><code>{JSON.stringify(response.content['application/json'].schema, null, 2)}</code></pre>
                            </div>
                          )}
                        </div>
                      ))}
                    </div>
                  </div>
                  );
                })}
              </div>
              );
            })}

            {Object.keys(pipelineSchemas).length > 0 && (
              <div class="schemas-section">
                <h3>Data Models</h3>
                {Object.entries(pipelineSchemas).map(([schemaName, schema]) => (
                  <div class="schema">
                    <h4>{schemaName}</h4>
                    <pre><code>{JSON.stringify(schema, null, 2)}</code></pre>
                  </div>
                ))}
              </div>
            )}
          </div>
        </section>

        <section id="rag-api" class="docs-section">
          <h2>{ragApiInfo.title}</h2>
          <p>
            {ragApiInfo.description} The RAG API provides endpoints for querying documents, retrieving relevant content, and performing vector similarity searches across your ingested data.
          </p>

          <div class="api-section">
            <h3>Authentication</h3>
            <p>Authentication is required using <code>{ragSecuritySchemes.APIKeyHeader?.name || 'x-api-token'}</code> header with your API token.</p>

            <h3>Base URL</h3>
            <pre><code>https://your-burrow-instance.com{ragApi.servers?.[0]?.url || ''}</code></pre>

            <h3>API Endpoints</h3>
            {ragEndpoints.map(endpoint => {
              const baseEndpointId = `rag-${endpoint.path.replace(/\//g, '-').replace(/^\-+|\-+$/g, '').replace(/[^a-z0-9-]/gi, '-')}`;
              return (
              <div class="endpoint-group" id={baseEndpointId}>
                <h4 class="endpoint-path">{endpoint.path}</h4>

                {endpoint.methods.map(method => {
                  const methodEndpointId = `${baseEndpointId}-${method.methodClass}`;
                  return (
                  <div class="endpoint" id={methodEndpointId}>
                    <div class="endpoint-header">
                      <span class={`method method-${method.methodClass}`}>{method.method}</span>
                      <span class="endpoint-summary">{method.summary}</span>
                    </div>

                    <p class="endpoint-description">{(method as any).description}</p>

                    {(method as any).parameters && (method as any).parameters.length > 0 && (
                      <div class="parameters-section">
                        <h5>Parameters</h5>
                        <ul class="parameters-list">
                          {(method as any).parameters.map((param: any) => (
                            <li>
                              <strong>{param.name}</strong>
                              <span class="param-type">({param.in}, {param.required ? 'required' : 'optional'})</span>
                              {param.schema?.type && <span class="param-schema">{param.schema.type}</span>}
                              {param.description && <span class="param-description">- {param.description}</span>}
                              {param.schema?.enum && (
                                <div class="param-enum">
                                  Options: {param.schema.enum.join(', ')}
                                </div>
                              )}
                            </li>
                          ))}
                        </ul>
                      </div>
                    )}

                    {(method as any).requestBody && (
                      <div class="request-section">
                        <h5>Request Body</h5>
                        <p>{(method as any).requestBody.description}</p>
                        {Object.entries((method as any).requestBody.content).map(([contentType, content]: [string, any]) => (
                          <div class="content-type">
                            <strong>{contentType}</strong>
                            {content.schema?.$ref && (
                              <div class="schema-ref">
                                <strong>Schema:</strong> {content.schema.$ref.split('/').pop()}
                                {ragSchemas[content.schema.$ref.split('/').pop()] && (
                                  <pre><code>{JSON.stringify(ragSchemas[content.schema.$ref.split('/').pop()], null, 2)}</code></pre>
                                )}
                              </div>
                            )}
                            {content.schema?.properties && (
                              <ul>
                                {Object.entries(content.schema.properties).map(([propName, propDetails]: [string, any]) => (
                                  <li>
                                    <strong>{propName}</strong>: {propDetails.type}
                                    {propDetails.description && ` - ${propDetails.description}`}
                                  </li>
                                ))}
                              </ul>
                            )}
                          </div>
                        ))}
                      </div>
                    )}

                    <div class="responses-section">
                      <h5>Responses</h5>
                      {Object.entries(method.responses).map(([statusCode, response]: [string, any]) => (
                        <div class="response">
                          <h6 class={`status-code status-${statusCode.charAt(0)}`}>
                            {statusCode} - {response.description}
                          </h6>
                          {response.content?.['application/json']?.schema && (
                            <div class="response-schema">
                              <strong>Response Schema:</strong>
                              {response.content['application/json'].schema.$ref ? (
                                <div>
                                  <em>{response.content['application/json'].schema.$ref.split('/').pop()}</em>
                                  {ragSchemas[response.content['application/json'].schema.$ref.split('/').pop()] && (
                                    <pre><code>{JSON.stringify(ragSchemas[response.content['application/json'].schema.$ref.split('/').pop()], null, 2)}</code></pre>
                                  )}
                                </div>
                              ) : (
                                <pre><code>{JSON.stringify(response.content['application/json'].schema, null, 2)}</code></pre>
                              )}
                            </div>
                          )}
                        </div>
                      ))}
                    </div>
                  </div>
                  );
                })}
              </div>
              );
            })}

            {Object.keys(ragSchemas).length > 0 && (
              <div class="schemas-section">
                <h3>Data Models</h3>
                {Object.entries(ragSchemas).map(([schemaName, schema]) => (
                  <div class="schema">
                    <h4>{schemaName}</h4>
                    <pre><code>{JSON.stringify(schema, null, 2)}</code></pre>
                  </div>
                ))}
              </div>
            )}
          </div>
        </section>
      </article>
    </div>
  </main>
</Layout>

