---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';

// Placeholder team data - replace with your actual team information
const team = [
  {
    name: "Team Member 1",
    role: "Role/Title",
    bio: "Brief description of team member and their contributions to the project.",
    image: "/team/placeholder1.jpg",
    github: "https://github.com/username",
    linkedin: "https://linkedin.com/in/username"
  },
  {
    name: "Team Member 2",
    role: "Role/Title",
    bio: "Brief description of team member and their contributions to the project.",
    image: "/team/placeholder2.jpg",
    github: "https://github.com/username",
    linkedin: "https://linkedin.com/in/username"
  },
  {
    name: "Team Member 3",
    role: "Role/Title",
    bio: "Brief description of team member and their contributions to the project.",
    image: "/team/placeholder3.jpg",
    github: "https://github.com/username",
    linkedin: "https://linkedin.com/in/username"
  }
];
---

<Layout title="Burrow - Team" description="Meet the team behind the Burrow project">
  <Navigation />
  <main>
    <div class="container">
      <section class="hero">
        <h1><span class="gradient-text">Our Team</span></h1>
        <p>
          Meet the talented individuals who brought the Burrow project to life.
        </p>
      </section>

      <section class="team-grid">
        {team.map((member) => (
          <div class="team-card">
            <div class="member-image">
              <img src={member.image} alt={member.name} />
            </div>
            <div class="member-info">
              <h3>{member.name}</h3>
              <p class="role">{member.role}</p>
              <p class="bio">{member.bio}</p>
              <div class="social-links">
                <a href={member.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
                <a href={member.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </section>
    </div>
  </main>
</Layout>

<style>
main {
  padding-top: 80px;
}

.team-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
}

.team-card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  overflow: hidden;
  transition: all 0.3s ease;
}

.team-card:hover {
  transform: translateY(-8px);
  border-color: rgba(255, 122, 0, 0.3);
  box-shadow: 0 12px 32px rgba(255, 122, 0, 0.1);
}

.member-image {
  width: 100%;
  height: 200px;
  overflow: hidden;
  background: rgba(255, 122, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.member-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.member-info {
  padding: 1.5rem;
}

.member-info h3 {
  color: var(--text-light);
  margin: 0 0 0.5rem 0;
  font-size: 1.25rem;
  font-weight: 600;
}

.role {
  color: #ff7a00;
  margin: 0 0 1rem 0;
  font-weight: 500;
  font-size: 0.9rem;
}

.bio {
  color: var(--text-muted);
  line-height: 1.6;
  margin: 0 0 1.5rem 0;
  font-size: 0.9rem;
}

.social-links {
  display: flex;
  gap: 1rem;
}

.social-links a {
  color: var(--text-muted);
  transition: color 0.2s;
}

.social-links a:hover {
  color: #ff7a00;
}

.social-links svg {
  width: 20px;
  height: 20px;
}

@media (max-width: 768px) {
  .team-grid {
    grid-template-columns: 1fr;
  }
}
</style>